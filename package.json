{
    "name": "grimoirejs-sc-slide",
    "version": "1.0.0",
    "description": "The boilerplate project for making plugin of grimoire.js.",
    "main": "index.js",
    "slide":"./html5conf.yml",
    "files": [
        "register",
        "ref",
        "src"
    ],
    "scripts": {
        "start": "webpack-dev-server --open --hot --progress --colors & watch 'npm run bundle-goml' ./gomls",
        "watch": "watch 'npm run build' ./gomls ./resources ./src",
        "stylus": "stylus ./resources/index.styl",
        "bundle": "webpack --progress --watch",
        "prepublish": "npm run build -- --prod",
        "bundle-goml": "node bundle.js > bundled.goml ",
        "build": "webpack --progress && node bundle.js > bundled.goml && npm run stylus",
        "generate-reference": "cauldron generate-reference --src ./src --dest ./src/index.ts --ts --main ./src/main.ts --dts ./ref"
    },
    "dependencies": {
        "@types/jquery": "^3.2.12",
        "grimoirejs": "^0.20.1",
        "grimoirejs-animation": "^1.3.1",
        "grimoirejs-forward-shading": "^1.7.3",
        "grimoirejs-fundamental": "^0.29.2",
        "grimoirejs-gltf": "^2.2.1",
        "grimoirejs-slide-system": "^0.0.18",
        "jquery": "^3.2.1",
        "js-yaml": "^3.9.1",
        "marked": "^0.3.6",
        "monaco-editor": "^0.10.0"
    },
    "devDependencies": {
        "babel-cli": "^6.26.0",
        "babel-core": "^6.26.0",
        "babel-loader": "^7.1.2",
        "babel-preset-es2015": "^6.18.0",
        "babel-preset-stage-2": "^6.18.0",
        "css-loader": "^0.28.7",
        "glob": "^7.1.2",
        "grimoirejs-cauldron": "^3.1.3",
        "handlebars": "^4.0.10",
        "raw-loader": "^0.5.1",
        "regenerator-runtime": "^0.11.0",
        "style-loader": "^0.18.2",
        "stylus": "^0.54.5",
        "stylus-loader": "^3.0.1",
        "ts-loader": "^2.3.3",
        "typescript": "^2.4.2",
        "watch": "^1.0.2",
        "webpack": "^3.5.5",
        "webpack-dev-server": "^2.7.1",
        "webpack-shell-plugin": "^0.5.0",
        "yargs": "^8.0.2"
    },
    "author": "GrimoireGL",
    "license": "MIT"
}
