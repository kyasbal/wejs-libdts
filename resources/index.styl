html,body
  margin 0px
  padding 0px
  height 100%
  background-color black

// p,img,video
//   user-select none

#canvas-container
  position absolute
  left 0px
  right 0px
  top 0px
  bottom 0px

#model-source
  display flex
  justify-content space-around
  flex-direction column
  height 100%
#editor-root
  z-index 10
  position absolute
  left 0px
  right 0px
  top 0px
  bottom 0px
  pointer-events none
  .single-editor-container-outer
    position absolute
    top 5%
    bottom 5%
    left 10%
    right 10%
    pointer-events all
  .single-editor-container
    height 100%
    width 100%
    display flex
    flex-direction column
    opacity 0.3
    &:hover
      opacity 0.9
  .actual-editor-container
    flex 1
  .button-container
    display flex
    justify-content flex-end
    .button-inner-container
      width 120px
      text-align center
      border 4px red solid
      &:hover
        background-color rgba(255,255,255,0.8)
        cursor pointer
      p
        color red
        font-weight 600


div#paragraph-root
  pointer-events none
  position absolute
  z-index 10
  left 0px
  right 0px
  top 0px
  bottom 0px

#intro-container
  position absolute
  left 0px
  right 0px
  top 0px
  bottom 0px
  display flex
  &>div
    flex 1
    display flex
    flex-direction column
    justify-content center
  .intro-inner
    background-color rgba(255,255,255,0.08)
    margin 0 auto
    padding 30px 100px
    &>img
      width 30%
      margin 30px auto
      display block
    &>p
      text-align center
      font-size 2em
      color white
      text-shadow 1px 1px 2px #000

.title-text
  color #9C8C69
  font-size 36px
  text-align center
  bottom 120px
  position absolute
  left 0px
  right 0px

.align-right
  text-align right

.vertical-center
  display flex
  flex-direction column
  justify-content space-around
  position absolute
  left 0px
  right 0px
  top 0px
  bottom 0px
  text-align center

.center-text
  font-size 7em
  color white
  text-shadow 1px 1px 2px #000
  opacity 0.7

.center-text-black
  font-size 7em
  color black
  text-shadow 1px 1px 2px #000
  opacity 0.7

.fullscreen-video
  width 100%
  height 100%

.fullscreen-container
  position absolute
  left 0px
  right 0px
  top 0px
  bottom 0px

.describe-logo
  width 512px
  margin 0 auto

.describe-container
  display flex
  position absolute
  left 0px
  right 0px
  top 0px
  bottom 0px
  justify-content space-between
  .describe-inner-container
    display flex
    flex-direction column
    width 33%
    text-align center
    padding 50px 0px 0px 0px
    &.bottom-align
      flex-direction column-reverse
      padding 0px 0px 50px 0px
    img
      width 40%

.future-container
  &>div
    margin 0 auto
  img
    position absolute
    width 512px
    margin 0 auto
    display block
    transform translate(-50%,-50%)
    &.bigger
      width 60%

.fusion-root
  display flex
  width 100%
  height 100%
  position absolute
  left 0px
  right 0px
  top 0px
  bottom 0px
  .logo-root
    position absolute
    right 0px
    left 0px
    top 0px
    bottom 0px
    .logo-inner
      display flex
      width 100%
      height 100%
      justify-content center
      align-items center
  .fusion-logo
    width 350px
    height 350px
  .fusion-subtitle
    color black
    text-shadow 0 1px 3px white
    font-size 45px
  .fusion-root-child
    width 50%
    height 100%
    padding 20px
    img
      width 350px
